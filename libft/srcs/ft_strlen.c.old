#include "libft.h"
#include "str.h"

size_t	ft_strlen(const char *s)
{
	int i;

	if (s == NULL)
		return (-1);
	i = 0;
	while (*s != '\0')
	{
		i++;
		s++;
	}
	return (i);
}
